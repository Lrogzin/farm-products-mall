<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <dubbo:application name="app-mall-product"/>
    <dubbo:monitor protocol="registry"/>
    <!--<dubbo:provider filter="providerFilter"/>-->
    <!--<dubbo:consumer filter="consumerFilter"/>-->
    <dubbo:registry address="zookeeper://127.0.0.1:2181" client="zkclient" timeout="5000"/>
    <dubbo:protocol name="dubbo" port="11032"/>

    <!--注册服务-->
    <dubbo:service interface="com.nuzoul.product.service.PanelService" ref="panelService" timeout="10000"/>
    <bean id="panelService" class="com.nuzoul.product.service.impl.PanelServiceImpl"/>
    <dubbo:service interface="com.nuzoul.product.service.ContentService" ref="contentService" timeout="10000"/>
    <bean id="contentService" class="com.nuzoul.product.service.impl.ContentServiceImpl"/>
    <!--引入其它spring 配置-->
    <import resource="classpath*:/spring-*.xml"/>
</beans>
