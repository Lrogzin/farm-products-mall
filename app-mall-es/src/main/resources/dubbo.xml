<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <dubbo:application name="app-mall-es"/>
    <dubbo:monitor protocol="registry"/>
    <!--<dubbo:provider filter="providerFilter"/>-->
    <!--<dubbo:consumer filter="consumerFilter"/>-->
    <dubbo:registry address="zookeeper://127.0.0.1:2181" client="zkclient" timeout="5000"/>
    <dubbo:protocol name="dubbo" port="11033"/>

    <!--注册服务-->
    <dubbo:service interface="com.nuzoul.es.service.SearchService" ref="searchService" timeout="10000"/>
    <bean id="searchService" class="com.nuzoul.es.service.impl.SearchServiceImpl"/>
    <dubbo:service interface="com.nuzoul.es.service.SearchItemService" ref="searchItemService" timeout="10000"/>
    <bean id="searchItemService" class="com.nuzoul.es.service.impl.SearchItemServiceImpl"/>
    <!--引入其它spring 配置-->
    <import resource="classpath*:/spring-*.xml"/>
</beans>
